{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["java"],
      "phases": {
        "setup": {
          "nixPkgs": ["jdk21"]
        },
        "build": {
          "cmds": ["mvn clean package -DskipTests --batch-mode"]
        }
      }
    }
  },
  "start": {
    "cmd": "java -Dserver.port=$PORT -Xmx512m -XX:+UseSerialGC -jar target/musicapp-0.0.1-SNAPSHOT.jar"
  }
}